<div id = "page-content">
    <h1 class = "text-center mt-4">All Articles</h1>
    <div class="container">
    <% @articles.each do |article|%>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-2 bg-white rounded">
                    <div class="card-header font-italic">
                        Taylor Daily
                    </div>
                    <div class="card-body ">
                        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-secondary"%></h5>
                        <p class="card-text"><%= truncate(article.description, length: 10)%></p>
                        <a href="#" class="btn btn-outline-secondary">View</a>
                        <a href="#" class="btn btn-outline-dark">Edit</a>
                        <a href="#" class="btn btn-outline-danger">Delete</a>
                    </div>
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
            </div>
        </div>
    <%end%>
    </div>
    <%=link_to 'Create New Article', new_article_path %></p>
</div>
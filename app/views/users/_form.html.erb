<div class="container">
    <div class="row justify-content-center">
        <%=render 'shared/errors', obj: @user%>
        <div class="col-10">
            <%= form_with(model: @user,class: "shadow p-3 mb-5 bg-info rounded", local: true)  do |f|%>
                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username"%>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "email@example.com"%>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "password"%>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-secondary btn-lg ") %>
                </div>
                
            <% end %>
        </div>
    </div>
    <div class="mb-3">
        <%= link_to "Return to Listing", articles_path, class: "text-info"%>
    </div>
</div>